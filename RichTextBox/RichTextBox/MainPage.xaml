<UserControl x:Class="RichTextBox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
    	<RichTextBox>
    		<Paragraph>
    			<Bold>Bold</Bold>
    			<Run>KKU&#160;</Run>
				<Italic>Hello world&#160;</Italic>
				<InlineUIContainer><Image Source="Image1.png" Width="100" /></InlineUIContainer>
				<Run FontSize="24">&#160;Yahooooooooo test&#160;</Run>
				<InlineUIContainer><Image Source="Image1.png" Width="30" /></InlineUIContainer>
				<Run>.</Run>
			</Paragraph>
    	</RichTextBox>

    </Grid>
</UserControl>
