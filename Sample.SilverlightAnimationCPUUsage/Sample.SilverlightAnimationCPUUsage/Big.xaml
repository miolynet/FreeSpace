			</local:BallsGroupUI.RenderTransform>
		</local:BallsGroupUI>
		<Button Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="8,8,0,0">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="Click">
					<ei:ControlStoryboardAction Storyboard="{StaticResource Storyboard1}"/>
				</i:EventTrigger>
			</i:Interaction.Triggers>
