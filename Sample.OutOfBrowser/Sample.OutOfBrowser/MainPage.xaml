<UserControl x:Class="Sample.OutOfBrowser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Rectangle Stroke="Black" StrokeThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Stroke="Black" Fill="Black" StrokeThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30"/>
        <Button Width="20" Height="20" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>
    </Grid>
</UserControl>
